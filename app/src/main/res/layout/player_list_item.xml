<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="5dp"
    android:layout_gravity="center_vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/player_list_item_player_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Chad"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/primary"
        android:textSize="@dimen/player_list_player_name"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:drawablePadding="8dp"/>

    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 games"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                fontPath="Quicksand-Bold.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/player_list_item_30_day_royale_wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.03%"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_royale"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/player_list_item_30_day_sudden_death_wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40.03%"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_sudden_death"
                android:drawablePadding="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="all time"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                fontPath="Quicksand-Bold.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/player_list_item_all_time_royale_wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.03%"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/player_list_item_all_time_sudden_death_wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40.03%"
                android:textSize="16sp"
                android:drawablePadding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>