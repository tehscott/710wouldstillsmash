<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="5dp"
    android:layout_gravity="center_vertical"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/character_list_item_character_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:elevation="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:src="@drawable/ssbu_character_ness"/>

    <TextView
        android:id="@+id/character_list_item_character_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Pikachu"
        android:maxLines="2"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        tools:ignore="MissingPrefix"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="win rate"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                fontPath="Quicksand-Bold.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/character_list_item_royale_wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.03%"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_royale"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/character_list_item_sudden_death_wins_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40.03%"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_sudden_death"
                android:drawablePadding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>