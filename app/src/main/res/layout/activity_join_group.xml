<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.stromberg.scott.seventenwouldstillsmash.activity.JoinGroupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:paddingBottom="32dp"
        android:paddingTop="32dp"
        android:text="@string/app_name"
        android:textColor="@color/text_primary"
        android:textSize="30sp"
        fontPath="Quicksand-Bold.ttf"
        tools:ignore="MissingPrefix" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:theme="@style/ProgressBar"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:id="@+id/join_group_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/join_group_code_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textAllCaps="true"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:textSize="40sp"
                android:gravity="center"
                android:typeface="monospace"
                android:ems="5"
                android:maxLength="5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your 5-digit group code\nto join a group."
                android:gravity="center_horizontal"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/join_group_create_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyCustomButton"
            android:text="Create a Group"/>
    </LinearLayout>
</LinearLayout>