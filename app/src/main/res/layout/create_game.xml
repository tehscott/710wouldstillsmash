                        android:text="@string/add_player"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout>

                <com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout
                    android:id="@+id/create_game_player_7_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_player"
                    android:padding="@dimen/space_8dp"
                    android:layout_marginRight="@dimen/space_8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/create_game_player_7_image"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/create_game_player_7_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/add_player"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout>

                <com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout
                    android:id="@+id/create_game_player_8_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_player"
                    android:padding="@dimen/space_8dp"
                    android:layout_marginRight="@dimen/space_8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/create_game_player_8_image"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/create_game_player_8_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/add_player"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout>
            </LinearLayout>

            <com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout
                android:id="@+id/create_game_set_winner_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_player"
                android:padding="@dimen/space_8dp"
                android:layout_marginTop="@dimen/space_16dp"
                android:layout_marginBottom="@dimen/space_16dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/create_game_set_winner_image"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/create_game_set_winner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/set_winner"
                    android:gravity="center"
                    android:textSize="18sp"/>
            </com.stromberg.scott.seventenwouldstillsmash.view.SquareLinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>